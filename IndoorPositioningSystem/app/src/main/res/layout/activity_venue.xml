<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.nellymincheva.indoorpositioningsystem.VenueActivity">


    <LinearLayout
        android:id="@+id/fullscreen_content"
        style="?metaButtonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="400dp"
            android:id="@+id/room"
            android:padding="20dp">


            <ImageView
                android:id="@+id/imgView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/bekonLight"
                android:scaleType="fitXY"></ImageView>

            <com.nellymincheva.indoorpositioningsystem.GridView
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_face_eucledean_distance"
                android:id="@+id/user_icon_euclidean_distance"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="86dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_face_nearest_sieve"
                android:id="@+id/user_icon_nearest_sieve"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="86dp" />


        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/data"
        android:text="zdr"/>
</FrameLayout>
